<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="content__wrapper">
		<div class="content__wrapper__logo">
			<span class="content__wrapper__logo__music">Music</span>
			<span class="content__wrapper__logo__quiz">Quiz</span>
		</div>
		<div class="wrapper__sign-form">
			<span class="wrapper__sign-form__header">LOG IN</span>
			<div class="sign-form-error"><span></span></div>
			<form action="">
                <input class="sign-form__element" type="email" maxlength="20" placeholder="LOGIN"/>
                <input class="sign-form__element" type="password" maxlength="10" placeholder="PASSWORD"/>
                <a class="back-form button" type="back" href="#main"><i class="fa fa-caret-left fa-lg"></i><fest:space/>BACK</a>
                <button class="submit-form button" type="submit">SIGN IN</button>
            </form>
		</div>
    </div>
</fest:template>
