<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
	<div class="content__wrapper">
		<div class="content__wrapper__logo">
			<span class="content__wrapper__logo__music">Music</span>
			<span class="content__wrapper__logo__quiz">Quiz</span>
		</div>
		<div class="content__wrapper__game-menu">
			<!--<fest:if test="true">-->
				<div class="content__wrapper__game-menu__player__info">
					<img class="menu__game__avatar" src="/img/people.svg"/>
					<span class="menu__username">
						<fest:value>
							data.username
	                    </fest:value>
	                </span>
					<span class="menu__score">
						Scores:  
						<fest:value>
							data.score
	                    </fest:value>
					</span>
				</div>
				<a class="content__wrapper__game-menu__button" href='#game'>New game</a>
				<a class="content__wrapper__game-menu__button" href='#scoreboard'>Scoreboard</a>
			<!--</fest:if>

			<fest:if test="!data.isAuth">
				<a class="content__wrapper__game-menu__button" href='#login'>Log In</a>
				<a class="content__wrapper__game-menu__button" href='#signup'>Sign Up</a>
			</fest:if>-->
		</div>
    </div>
</fest:template>
